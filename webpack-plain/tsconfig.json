{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2016",
    "lib": ["ESNext"],
    "types": ["node"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "sourceMap": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./dist",
  },
  "include": ["src/**/*"],
}
